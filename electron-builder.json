{
  "appId": "com.g-durante.sistema-muestras",
  "productName": "Sistema de Muestras",
  "artifactName": "Sistema-de-Muestras-${version}.${ext}",
  "files": ["dist-electron", "dist-react"],
  "extraResources": [
    "dist-electron/electron/preload.cjs",
    "src/assets/**",
    "dist-electron/electron/db/migrations/**",
    {
      "from": "build/logo.jpg",
      "to": "logo.jpg"
    }
  ],
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },
  "win": {
    "target": ["nsis"]
  },
  "nsis": {
    "runAfterFinish": false,
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true
  },
  "icon": "build/icon.ico"
}
